<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chessgameclientapp.controllers.LoginController">
   <Accordion expandedPane="$loginPane" layoutX="14.0" layoutY="14.0" prefHeight="270.0" prefWidth="170.0">
     <panes>
       <TitledPane fx:id="loginPane" animated="false" text="Login">
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="180.0">
               <TextField fx:id="tbLoginName" layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="140.0" promptText="Name" />
               <PasswordField fx:id="tbLoginPassword" layoutX="14.0" layoutY="49.0" prefHeight="25.0" prefWidth="140.0" promptText="Password" />
               <Button fx:id="btnLogin" layoutX="14.0" layoutY="175.0" mnemonicParsing="false" onAction="#login" prefHeight="30.0" prefWidth="140.0" text="Login" />
           </AnchorPane>
       </TitledPane>
       <TitledPane animated="false" text="Register">
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="180.0">
               <TextField fx:id="tbRegisterName" layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="140.0" promptText="Name" />
               <PasswordField fx:id="tbRegisterPassword" layoutX="14.0" layoutY="49.0" prefHeight="25.0" prefWidth="140.0" promptText="Password" />
               <PasswordField fx:id="tbRegisterPasswordConfirm" layoutX="14.0" layoutY="84.0" prefHeight="25.0" prefWidth="140.0" promptText="Confirm Password" />
               <Button fx:id="btnRegister" layoutX="14.0" layoutY="175.0" mnemonicParsing="false" onAction="#register" prefHeight="30.0" prefWidth="140.0" text="Register" />
           </AnchorPane>
       </TitledPane>
     </panes>
   </Accordion>
</AnchorPane>
